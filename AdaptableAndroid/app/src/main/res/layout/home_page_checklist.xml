<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home_checklist_layout">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="0.85">
        <ImageView
            android:id="@+id/home_page_checklist_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checklist"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />

        <com.adaptableandroid.TypefacedTextView
            xmlns:my_namespace="http://schemas.android.com/apk/res/com.adaptableandroid"
            my_namespace:typeface="Roboto-Black.ttf"
            android:textSize="24sp"
            android:text="Check out your Checklists"
            android:textColor="#5dabf4"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/home_page_checklist_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"/>

    </RelativeLayout>
</LinearLayout>