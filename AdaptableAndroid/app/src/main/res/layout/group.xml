<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:paddingTop="10dp"-->
        <!--android:paddingBottom="10dp"-->
        <!--android:id="@+id/lblListHeader"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge" />-->

    <com.adaptableandroid.TypefacedTextView
        xmlns:my_namespace="http://schemas.android.com/apk/res/com.adaptableandroid"
        android:id="@+id/headLabel"
        android:text="filler text for now"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dip"
        android:paddingTop="5dp"
        android:textColor="#FFF"
        android:textSize="20dip"
        my_namespace:typeface="Roboto-Black.ttf"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <!--android:background="#545454"-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <com.adaptableandroid.TypefacedTextView
        xmlns:my_namespace="http://schemas.android.com/apk/res/com.adaptableandroid"
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dip"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:background="#FFF"
        my_namespace:typeface="Roboto-Medium.ttf"
        android:alpha="0.7"
        android:textSize="15dip"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:src="@drawable/down_arrow"
        android:layout_gravity="right"
        android:alpha="0.3"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/lblListHeader" />
    </RelativeLayout>

</LinearLayout>
