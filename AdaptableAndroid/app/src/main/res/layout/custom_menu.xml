<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="fill_horizontal"
    android:background="@color/material_blue_grey_800"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/custom_menu_settings"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"

        android:layout_marginLeft="10dp"
        android:onClick="createNotification"
        android:scaleType="centerInside"
        android:src="@drawable/settings"

        />

    <ImageButton
        android:id="@+id/custom_menu_warnings"
        android:layout_width="50dp"
        android:layout_height="fill_parent"

        android:onClick="checkLocation"
        android:src="@drawable/warnings"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/custom_menu_checklists"
        android:layout_width="50dp"
        android:layout_height="fill_parent"

        android:layout_marginRight="10dp"
        android:onClick="goToChecklist"
        android:src="@drawable/checklists"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
